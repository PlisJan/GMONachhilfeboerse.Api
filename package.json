{
  "name": "nhb_api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "dev": "concurrently \"tsc --watch\" \"nodemon\""
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "node -r tsconfig-paths/register -r ts-node/register ./src/index.ts",
    "ext": "ts, js"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "jade": "~1.11.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash.range": "^3.2.0",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash.range": "^3.2.7",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.16",
    "@types/swagger-jsdoc": "^6.0.1",
    "concurrently": "^7.4.0",
    "dotenv": "^16.0.2",
    "nodemon": "^2.0.19",
    "swagger-jsdoc": "^6.2.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3"
  }
}
